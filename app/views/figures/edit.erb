<h1>Edit <%= @figure.name %></h1>
<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="figure[name]">Figure Name</label>
  <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">

  <h2>Titles:</h2>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"<%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input>
  <% end %>

  <h2>Landmarks:</h2>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"<%= 'checked' if @figure.landmark_ids.include?(landmark.id) %>><%= landmark.name %>
  <% end %><br>

  <label for="landmark[name]">New Landmark</label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <input type="submit" value="Edit Figure">
</form>